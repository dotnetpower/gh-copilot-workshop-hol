{
    "files.associations": {
        "*.md": "markdown"
    },
    "files.exclude": {
        "_site": true,
        ".sass-cache": true,
        ".jekyll-cache": true,
        ".jekyll-metadata": true
    },
    "search.exclude": {
        "_site": true,
        ".sass-cache": true,
        ".jekyll-cache": true,
        "Gemfile.lock": true
    },
    "markdown.preview.breaks": true,
    "markdown.preview.linkify": true,
    
    // GitHub Copilot - Git 커밋 메시지 생성 설정
    "github.copilot.chat.localeOverride": "ko",
    "github.copilot.chat.generateCommitMessage.enabled": true,
    "github.copilot.chat.commitMessageGeneration.instructions": [
        {"text":"한국어로 간략하게 생성해, feat: 같은건 넣지마"}
    ],


}
